<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/default_horizontal_margin"
    android:paddingEnd="6dp"
    android:paddingStart="6dp"
    android:paddingTop="@dimen/default_horizontal_margin">

  <ImageView
      android:id="@+id/tweet_avatar"
      android:layout_width="48dp"
      android:layout_height="48dp"
      android:contentDescription="@string/tweets_avatar_description"/>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:paddingEnd="6dp"
      android:paddingStart="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

      <TextView
          android:id="@+id/tweet_full_name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:maxLines="1"
          android:textSize="16sp"
          android:textStyle="bold"
          tools:text="John Doe"/>

      <TextView
          android:id="@+id/tweet_name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:maxLines="1"
          android:paddingEnd="6dp"
          android:paddingStart="6dp"
          android:textSize="14sp"
          android:textStyle="italic"
          tools:text="\@johndoe"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tweet_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="6dp"
        android:paddingTop="6dp"
        android:textSize="14sp"
        tools:text="Meat is healthy!"/>
  </LinearLayout>
</LinearLayout>